<h1 class="card post">Hello, {{userData.first_name}}</h1>
    <div class="feed">

        {{#each posts as |post|}}
            <div class="card post">
                <div class="post-header">
                    <h2>{{post_title}}</h2>
                    <p>{{format_date createdAt}} {{format_time createdAt}}</p>
                </div>
                <p>{{post_preview post_body}} ...</p>
                <p>by <a href=/{{user.username}}>{{user.username}}</p></a>
            </div>
        {{/each}}
    </div>
