<form class="post-form">
    <div class="mb-3">
        <label for="postTitle" class="form-label">Title:</label>
        <input maxlength="50" type="text" class="form-control" id="postTitle" />
    </div>

    <div class="mb-3">
        <label for="postBody" class="form-label">Body:</label>
        <textarea type="text" class="form-control" id="postBody"></textarea>
    </div>
    <button id="updatePost" type="submit" class="btn btn-purple">Save</button>
    <button id="deletePost" type="submit" class="btn btn-danger">Delete</button>
</form>

<script src="./js/updateForm.js"></script>