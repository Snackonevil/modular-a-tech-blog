<div class="container">
    <div class="login-card">

        <h2
            style="font-family:'Courier New', Courier, monospace; margin-bottom: 40px"
        >Login</h2>
        <form class="login-form">
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email address</label>
                <input
                    type="email"
                    class="form-control"
                    id="emailInput"
                    aria-describedby="emailHelp"
                />
            </div>
            <div class="mb-3">
                <label for="passwordInput" class="form-label">Password</label>
                <input
                    type="password"
                    class="form-control"
                    id="passwordInput"
                />
            </div>

            <button type="submit" class="btn btn-purple">Sign In</button>
        </form>
        <br />
        <p>New here? <a href="/new-user">Create an account</a></p>
    </div>
</div>

<script src="./js/login.js"></script>
