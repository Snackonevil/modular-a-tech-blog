<div class="card post">
    <div class="post-header">
        <h1>DASHBOARD</h1>
        <button
            onclick="goToPostForm()"
            class="btn btn-purple"
            style="height: 40px; width: 40px"
        ><i class="fa-solid fa-plus"></i></button>
    </div>
</div>

{{#if posts}}
    <div class="feed">
        {{#each posts}}
            <div class="card post">
                <div class="post-header">
                    <h2>{{post_title}}</h2>
                    <button
                        data-post={{id}}
                        class="btn btn-purple editBtn"
                        style="height: 40px; width: 40px"
                    ><i data-post={{id}} class="fas fa-cog"></i>
                    </button>
                </div>
                <p class="post-text-body">{{post_preview post_body}}</p>
                <p class="timestamp">{{format_date createdAt}}
                    {{format_time createdAt}}</p>
            <a href=posts/{{id}}>view post</a>
            </div>
        {{/each}}
    </div>
{{else}}

    <div class="container">
        <div class="card post">
            <h1>Welcome to Modular!</h1>
            <p>Create your first post by clicking the plus sign at the right of the dashboard header</p>
        </div>
    </div>
{{/if}}

<script src="./js/post.js"></script>