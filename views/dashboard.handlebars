<div class="card post">
    <div class="post-header">
        <h1>DASHBOARD</h1>
        <button
            onclick="goToPostForm()"
            class="btn btn-purple"
            style="height: 40px; width: 40px"
        ><i class="fa-solid fa-plus"></i></button>
    </div>
</div>

{{#if posts}}
    <div class="feed">
        {{#each posts}}
            <div class="card post" data-post={{id}}>
                <div class="post-header">
                    <h1>{{post_title}}</h1>
                    <button
                        class="btn btn-purple"
                        style="height: 40px; width: 40px"
                    ><i class="fas fa-cog"></i>
                    </button>
                </div>
                <p>{{post_preview post_body}}</p>
                <p class="timestamp">{{format_date createdAt}}
                    {{format_time createdAt}}</p>
            </div>
        {{/each}}
    </div>
{{else}}

    <div class="container">
        <div class="card post">
            <h1>create your first post</h1>
        </div>
    </div>
{{/if}}
<script>
    function goToPostForm() { location.href = './new-post' }
</script>