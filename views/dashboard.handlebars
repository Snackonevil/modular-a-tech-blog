<div class="container">
    <h1 class="card post">DASHBOARD</h1>
    {{#each posts}}
        <div class="card post">
            <h1>{{post_title}}</h1>
            <p>{{post_body}}</p>
            <p>{{format_date createdAt}} {{format_time createdAt}}</p>
            <button><i class="fas fa-cog"></i></button>
        </div>
    {{/each}}
</div>